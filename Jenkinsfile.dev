pipeline {
    agent any

    tools {
        maven 'MAVEN'  // Aquí haces referencia a la herramienta Maven configurada en Jenkins
    }

    stages {
        stage('Clonar Repositorio') {
            steps {
                checkout scm
            }
        }

        stage('Validar Maven') {
            steps {
                echo "Maven instalado en: ${tool 'MAVEN'}" // Esto imprimirá la ruta de Maven
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
