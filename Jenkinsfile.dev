pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        JAVA_HOME = tool name: 'JDK', type: 'jdk'
    }

    stages {
        stage('Probar MAVEN_HOME') {
            steps {
                echo "MAVEN_HOME est√° configurado como: ${MAVEN_HOME}"
                sh '${MAVEN_HOME}/bin/mvn -version'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
            cleanWs()
        }
    }
}
