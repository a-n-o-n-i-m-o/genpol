pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'MAVEN', type: 'maven'
    }

    stages {
        stage('Clonar Repositorio') {
            steps {
                checkout scm
            }
        }

        stage('Validar Maven') {
            steps {
                bat '${MAVEN_HOME}/bin/mvn -version'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
