pipeline {
    agent any

    environment {
        CHROME_DRIVER_PATH = "C:/ProgramData/Jenkins/.jenkins/workspace/auto-os-genpol/src/main/resources/driver/chrome131/chromedriver.exe"
    }

    tools {
        maven 'MAVEN'
    }

    stages {
        stage('Configurar Git') {
            steps {
                bat 'git config --global http.postBuffer 524288000'
                bat 'git config --global http.maxRequestBuffer 100M'
            }
        }

        stage('Clonar Repositorio') {
            steps {
                retry(3) {
                    checkout scm
                }
            }
        }

        stage('Instalar Dependencias') {
            steps {
                bat "\"${MAVEN_HOME}\\bin\\mvn\" install"
            }
        }

        stage('Ejecutar Pruebas') {
            steps {
                bat "bin\\mvn clean verify"
            }
        }

        stage('Generar Reporte') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}